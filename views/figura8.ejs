<!DOCTYPE html>
<html lang="es">


<head>
    <meta charset="utf-8" />
    <link href="figura8.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two&display=swap" rel="stylesheet">
</head>

<body>

    <header>
        <div class="titulo">
            <h1>FaceBluff</h1>
        </div>
        <div class="enlaces">
            <a href="/users/my_profile">Perfil</a>
            <a href="/users/friends">Amigos</a>
            <a href="/question">Preguntas</a>
            <a href="/users/login">Desconectar</a>
            <a href="">Puntos</a>
        </div>
    </header>
    <main>
        <div class="contenido">
            <h2 class="pagina">
                <%= pregunta.enunciado %>
            </h2>

            <div class="main">

                <form action=<%=/question/answer/ +pregunta.idPregunta %> method="post">
                    <section class="pregunta">

                        <% respuestas.forEach(element => { %>
                        <input type="radio"  name="seleccion" value=<%= element %>> <span> <%= element %></span>
                        <% }); %>
                    </section>
                    <section class="pregunta otra">
                        <input type="radio" name="seleccion" value ="otro" > <span> Otra : </span>
                        <input type="text" name="seleccionText" class="otro" value="">
                    </section>
                    <input type="submit" value="Responder">
                </form>
            </div>
        </div>


        </div>

    </main>
</body>

</html>

