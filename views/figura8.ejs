<!DOCTYPE html>
<html lang="es">


<head>
    <meta charset="utf-8" />
    <link href="/css/figura8.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two&display=swap" rel="stylesheet">
</head>

<body>

        <%-include("headerConLogin", {puntuacion:puntuacion}) %>

    <main>
        <div class="contenido">
            <h2 class="pagina">
                <%= pregunta.enunciado %>
            </h2>

            <div class="main">

                <form method="POST" action= <%="/question/answer/" +pregunta.idPregunta %>>
                    <% respuestas.forEach(function(element) { %>
                    <section class="pregunta">
                      
                        <input type="radio"  name="seleccion" value="<%= element.respuesta %>"> <span> <%= element.respuesta %></span>
                       
                    </section>
                     <% }); %>
                    <section class="pregunta otra">
                        <br/>
                        <input type="radio" name="seleccion" value ="otro" > <span> Otra: </span>
                        <input type="text" name="seleccionText" class="otro" value=" ">
                    </section>
                    <input type="submit" value="Responder" class = "login">
                </form>
            </div>
        </div>


        </div>

    </main>
</body>

</html>

