<!DOCTYPE html>
<html lang="es">


<head>
    <meta charset="utf-8" />
    <link href="css/figura3.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two&display=swap" rel="stylesheet">
</head>

<body>
    <%-include("headerConLogin", {puntuacion:puntuacion}) %>

    <main>
        <div class="contenido">
            <h2 class="pagina">
                Tu perfil
            </h2>

            <div class="main">
                <div class="fotoPerfil">
                    <img class="fotoPerfil" src=<%="/users/imagen/"+usuario.idUsuario%>>
                </div>
                <div class="DatosPerfil">
                    <p>Nombre: <%=usuario.nombre%></p>
                    <p>Edad: <%=usuario.edad%> años</p>
                    <p>Género: <%=usuario.genero%></p>
                    <p>Puntuacion: <%=usuario.puntuacion%></p>
                </div>
            </div>
            <br>
            <div class="botones">
                <a href="/users/update_user" class="login">Modificar</a>
                <form method="POST" action="/users/upload_img" class="formulario" enctype="multipart/form-data">
                    <input type="file" name="foto">
                    <input type="submit" value="Subir foto" class="login">
                </form>
            </div>
            <div class="imagenes">
                <% listaFotos.forEach(function(element) { %>
                <div>
                    <img class="fotoNormal" src=<%="/users/imagenNormal/"+element%>>
                </div>
                <% }); %>
            </div>
        </div>
        <div class="mensaje">
            <p><%=mensaje%></p>
        </div>
    </main>
</body>

</html>